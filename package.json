{
  "name": "nextjs-architecture-todo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky",
    "format": "npx @biomejs/biome format --write .",
    "format:check": "npx @biomejs/biome format .",
    "lint": "npx @biomejs/biome lint .",
    "lint:fix": "npx @biomejs/biome lint --write .",
    "check": "npx @biomejs/biome check --write .",
    "check:ci": "npx @biomejs/biome ci .",
    "test": "dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest",
    "test:coverage": "dotenv -e .env.test -- vitest run --coverage",
    "test:ui": "dotenv -e .env.test -- vitest --ui",
    "db:test:up": "docker compose up -d db-test",
    "db:test:down": "docker compose stop db-test"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "npx @biomejs/biome format --write",
      "npx @biomejs/biome lint --write"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^7.4.2",
    "@prisma/client": "^7.4.1",
    "firebase": "^12.10.0",
    "firebase-admin": "^13.7.0",
    "neverthrow": "^8.2.0",
    "next": "16.1.6",
    "pg": "^8.19.0",
    "pino": "^10.3.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.2",
    "ts-pattern": "^5.9.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv": "^17.3.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.3.0",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.4.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  }
}
